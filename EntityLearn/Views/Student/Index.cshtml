@model IEnumerable<EntityLearn.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Student Details</h1>

<p>
    <a asp-controller="Student" asp-action="Add" class="btn btn-success">Create New</a>
</p>

<hr />
<br />
<table class="table table-striped table-hover">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th>Action</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
                <td>
                    <a class="btn btn-success" asp-controller="Student" asp-action="Update" asp-route-id="@item.StudentID">Update</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@item.StudentID">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
